<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.greenwich.intelligentmovementsensor">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true">
        <activity android:name=".StartupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:windowSoftInputMode="adjustPan" android:name=".MainActivity"/>
        <activity android:windowSoftInputMode="adjustPan" android:name=".GraphView"/>
        <activity android:windowSoftInputMode="adjustPan" android:name=".TabsActivity" />
        <activity android:windowSoftInputMode="adjustPan" android:name=".AddNewMovement"/>
        <activity android:windowSoftInputMode="adjustPan" android:name=".AddExistingMovement"/>
        <service android:name=".BackgroundService"/>
        <service android:name=".BackgroundDetector"/>
        <service android:name=".BackgroundSensorRecord"/>
    </application>
</manifest>